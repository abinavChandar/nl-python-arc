# Ollama (OpenAI-compatible) connection
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_API_KEY=ollama
# Default local model
OLLAMA_MODEL=qwen2.5-coder:7b

# Minimal NL search defaults
NL_TEMPERATURE=0.6
FOLLOW_TEMPERATURE=0.2
NL_CANDIDATES=2
FOLLOW_SAMPLES=2
MAX_TOKENS=4096

# Limit number of tasks while testing
TASK_LIMIT=1

# ===== Evolutionary mode (Jeremy-style search) =====
EVO_ENABLED=1
EVO_POP_SIZE=12
EVO_GENERATIONS=4
EVO_ELITE_K=4
EVO_MUT_PER_PARENT=2
EVO_NL_TEMP_START=0.9
EVO_NL_TEMP_END=0.5
EVO_FOLLOW_TEMP=0.2
EVO_FOLLOW_SAMPLES=3
EVO_FOLLOW_CONSENSUS=2
EVO_MAX_TOKENS=4096
EVO_RETRIES=2
# Optionally use different models for roles
# EVO_PROPOSER_MODEL=qwen2.5:7b-instruct
# EVO_CHECKER_MODEL=llama3.1:8b-instruct
